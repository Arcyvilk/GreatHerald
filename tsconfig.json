{
    "compilerOptions": {
      "outDir": "./dist",
      "allowJs": true,
      "target": "es6",
      "forceConsistentCasingInFileNames": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
    },
    "include": [
      "./lib/**/*"
    ],
    "exclude": [
      "node_modules",
      "dist"
    ]
  }
  